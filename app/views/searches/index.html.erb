<h1 class="text-center font-bold text-2xl p-8">
  My searches( <%= pluralize(@search_results.length, 'Search') %>)
</h1>
<div class="flex  justify-center">


  <div
    class="w-full  max-w-md p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">

    <div class="flex items-center justify-between mb-4">
      <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white">Search term</h5>
      <span class="text-sm font-medium text-blue-600 hover:underline dark:text-blue-500">
        Number of occurrence:
      </span>
    </div>
    <div class="flow-root">
      <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
        <% if @search_results.empty? %>
        <p class="text-center text-gray-500 py-8">
          No results found
        </p>
        <% else %>
        <% @search_results.entries.each do |title, count| %>
        <li class="py-3 sm:py-4">
          <div class="flex items-center space-x-4">

            <div class="flex-1 min-w-0">

              <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                <%= title%>
              </p>
            </div>
            <div class="inline-flex items-center text-base font-semibold text-gray-900 dark:text-white">
              <%= count %>
            </div>
          </div>
        </li>
        <% end %>
        <% end %>

      </ul>
    </div>
  </div>
</div>
